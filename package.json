{
  "scripts": {
    "lint": "standard --fix preprocessor.js test/**/*.js",
    "tsc": "tsc --watch",
    "start": "tsc; node lib/runGame.js",
    "test": "jest --coverage --updateSnapshot",
    "test-debug": "node --inspect-brk $(npm bin)/jest -i --updateSnapshot $@",
    "posttest": "npm run-script lint",
    "watch": "jest --updateSnapshot --watch"
  },
  "dependencies": {
    "@types/axel": "0.0.0",
    "@types/glob": "^5.0.35",
    "@types/lodash": "^4.14.108",
    "axel": "0.0.3",
    "eventemitter2": "^5.0.1",
    "glob": "^7.1.2",
    "jest": "^22.4.3",
    "lodash": "^4.17.10",
    "ohm-js": "^0.14.0",
    "pify": "^3.0.0"
  },
  "devDependencies": {
    "@types/pify": "^3.0.2",
    "eslint-plugin-typescript": "^0.12.0",
    "http-server": "^0.11.1",
    "standard": "^11.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".ts": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/test/*.+(ts|js)"
    ]
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  }
}
